<IfModule mod_ssl.c>
<VirtualHost _default_:443>
    ServerAdmin webmaster@localhost

    LogLevel warn
    CustomLog /var/log/apache2/ssl_access.log combined

    SSLEngine on
    SSLCertificateFile    /etc/ssl/certs/crits.crt
    SSLCertificateKeyFile /etc/ssl/private/crits.plain.key
    SSLProtocol All -SSLv2 -SSLv3

    DocumentRoot "/opt/crits/crits/extras/www"
    Alias /static/ /opt/crits/crits/extras/www/static/
    Alias /js/ /opt/crits/crits/extras/www/js/
    Alias /css/ /opt/crits/crits/extras/www/css/
    Alias /ext/ /opt/crits/crits/extras/www/ext/
    Alias /images/ /opt/crits/crits/extras/www/images/
    Alias /img/ /opt/crits/crits/extras/www/images/
    Alias /new_images/ /opt/crits/crits/extras/www/new_images/
    Alias /plugin/ /opt/crits/crits/extras/www/plugin/
    Alias /favicon.ico /opt/crits/crits/extras/www/favicon.ico
    WSGIScriptAlias / /opt/crits/crits/django.wsgi
    WSGIApplicationGroup %{GLOBAL}

</VirtualHost>
</IfModule>
